{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "AquaTrack WebApp",
    "license": {
      "name": "Apache 2.0",
      "url": "<http://www.apache.org/licenses/LICENSE-2.0.html>"
    },
    "description": "This is a documentation of AquaTrack app\n"
  },
  "servers": [
    {
      "url": "https://aquatrack-webapp-backend.onrender.com"
    }
  ],
  "tags": [
    {
      "name": "water",
      "description": "Operations about AquaTrack."
    },
    {
      "name": "user",
      "description": "User operations."
    }
  ],
  "paths": {
    "/water": {
      "post": {
        "tags": [
          "water"
        ],
        "summary": "Create water",
        "operationId": "createWater",
        "description": "Create a water with payload",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amountOfWater": {
                    "description": "Amount of water",
                    "type": "number",
                    "example": "100"
                  },
                  "date": {
                    "description": "Date of consumption",
                    "type": "string",
                    "example": "2022-10-10"
                  },
                  "month": {
                    "description": "Month of consumption",
                    "type": "string",
                    "example": "January"
                  },
                  "userId": {
                    "description": "User id",
                    "type": "string",
                    "example": "6655a67a37bc0571c96d9655"
                  },
                  "consumption": {
                    "description": "Consumption",
                    "type": "number",
                    "example": "100"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully created a water!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully created a record of the amount of water consumed!"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/water"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/water/:{id}": {
      "delete": {
        "tags": [
          "water"
        ],
        "summary": "Delete water",
        "operationId": "deleteWater",
        "description": "Delete water",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "63b9c4d7e0f2a6cf8a8f8b8d"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Water - The water was successfully deleted"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      },
      "patch": {
        "tags": [
          "water"
        ],
        "summary": "Update water",
        "operationId": "patchWater",
        "description": "Patch a water with payload",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "6655a67a37bc0571c96d9655"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amountOfWater": {
                    "description": "Amount of water",
                    "type": "number",
                    "example": "100"
                  },
                  "date": {
                    "description": "Date of consumption",
                    "type": "string",
                    "example": "2022-10-10"
                  },
                  "month": {
                    "description": "Month of consumption",
                    "type": "string",
                    "example": "January"
                  },
                  "userId": {
                    "description": "User id",
                    "type": "string",
                    "example": "6655a67a37bc0571c96d9655"
                  },
                  "consumption": {
                    "description": "Consumption",
                    "type": "number",
                    "example": "100"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully patched a water!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully patched a record about consumed amount of water!"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/water"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "water": {
        "type": "object",
        "required": [
          "amountOfWater",
          "userId"
        ],
        "properties": {
          "amountOfWater": {
            "description": "Amount of water",
            "type": "number",
            "example": 100
          },
          "date": {
            "description": "Date of consumption",
            "type": "string",
            "example": "2022-01-01"
          },
          "month": {
            "description": "Month of consumption",
            "type": "string",
            "example": "January"
          },
          "userId": {
            "description": "User id",
            "type": "string",
            "example": "6655a67a37bc0571c96d9655"
          },
          "consumption": {
            "description": "Consumption",
            "type": "number",
            "example": 100
          }
        }
      }
    },
    "responses": {
      "401": {
        "description": "Error, user is not authorized",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "Error, user is not authorized!"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Access token expired!"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "Resource not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 404
                },
                "message": {
                  "type": "string",
                  "example": "Resource not found!"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "The required resource was not found!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}